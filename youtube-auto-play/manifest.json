{
  "manifest_version": 3,
  "name": "YouTube自動再生",
  "version": "1.3.3",
  "description": "YouTubeの動画が終了したら自動で次の動画を再生する拡張機能",
  "permissions": ["storage", "tabs", "alarms", "idle", "scripting", "sidePanel", "offscreen"],
  "commands": {
    "pause-youtube": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "YouTube動画を停止"
    },
    "open-first-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "URLリストの先頭を開く"
    },
    "toggle-popup-hidden-ui": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Toggle hidden UI in popup"
    }
  },
  "side_panel": {
    "default_path": "dist/index.html"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "YouTube自動再生"
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "https://music-auto-play.onrender.com/*",
    "https://*.youtube.com/*",
    "http://*.youtube.com/*",
    "https://youtu.be/*",
    "http://youtu.be/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "http://*.youtube.com/*",
        "https://youtu.be/*",
        "http://youtu.be/*"
      ],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "musicvideo.png",
    "32": "musicvideo.png",
    "48": "musicvideo.png",
    "128": "musicvideo.png"
  }
}
