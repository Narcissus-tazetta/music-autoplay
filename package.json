{
  "name": "music-auto-play",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build && bun run scripts/fix-react-dom-server.ts",
    "build:extension": "vite build --config youtube-auto-play/vite.config.ts && node youtube-auto-play/scripts/copy-manifest.js",
    "dev": "bun run --watch src/server/server.ts",
    "lint": "oxlint --fix && dprint fmt",
    "prepare": "husky",
    "start": "cross-env NODE_ENV=production bun run src/server/server.ts",
    "test:critical": "bun test tests/critical",
    "test:unit": "bun test tests/unit",
    "tsc": "tsc --noEmit"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md,json}": [
      "dprint fmt"
    ],
    "*.{ts,tsx,js,jsx}": [
      "oxlint --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@conform-to/dom": "^1.15.0",
    "@conform-to/zod": "^1.15.0",
