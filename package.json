    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-router/node": "^7.9.3",
    "chalk": "^5.4.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.7",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "googleapis": "^149.0.0",
