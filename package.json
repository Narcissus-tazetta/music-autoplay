{
  "name": "music-auto-play",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "bun run --watch src/server/server.ts",
    "start": "cross-env NODE_ENV=production bun run src/server/server.ts",
    "typecheck": "react-router typegen && tsc",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "format": "dprint fmt",
    "format:check": "dprint check",
    "quality": "bun run typecheck && bun run lint && bun run format:check",
    "test": "bun test",
    "test:e2e": "bunx playwright test",
    "test:unit": "bash scripts/run-unit-tests.sh",
    "test:unit:simple": "sh -lc 'for f in tests/unit/*.test.ts; do bun test \"$f\" || exit 1; done'",
    "test:coverage": "vitest run --coverage",
    "ci": "bun run quality && bun run test:unit && bun run build",
    "ci:skip-lint": "bun run typecheck && bun run test:unit && bun run build",
    "migrate": "node scripts/migrate-add-requesterHash.js",
    "migrate:add-requesterHash": "node scripts/migrate-add-requesterHash.js",
    "test:e2e:ui": "bunx playwright test --ui",
    "prepare": "husky"
  },
  "dependencies": {
